{
  "manifest_version": 3,
  "name": "Restore Iran Flag on Twitter",
  "version": "1.0.0",
  "description": "Restores the original Iranian flag emoji on Twitter/X",
  "permissions": [],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://mobile.twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://mobile.twitter.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["flag.svg", "flag.png"],
      "matches": ["https://twitter.com/*", "https://x.com/*", "https://mobile.twitter.com/*"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
